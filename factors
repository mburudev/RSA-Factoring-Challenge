#!/usr/bin/python3
"""Module that factorize as many numbers as possible
 into a product of two smaller numbers."""
import sys
import time

def factorize(number, start_time):
    factors = []
    for i in range(2, int(number**0.5) + 1):
        if time.time() - start_time > 5:
            raise TimeoutError("Time limit exceeded.")
        while number % i == 0:
            factors.append(i)
            number //= i
    if number > 1:
        factors.append(number)
    return factors

def main():
    if len(sys.argv) != 2:
        print("Usage: factors <file>")
        return

    file_path = sys.argv[1]

    try:
        with open(file_path, 'r') as file:
            for line in file:
                number = int(line.strip())
                start_time = time.time()
                try:
                    factors = factorize(number, start_time)
                    if len(factors) == 2:
                        print(f"{number}={factors[0]}*{factors[1]}")
                except TimeoutError:
                    print("Factorization took too long. Skipping this number.")
    except FileNotFoundError:
        print("File not found.")
    except ValueError:
        print("Invalid number in the file.")
    except Exception as e:
        print(f"An error occurred: {e}")

if __name__ == "__main__":
    main()
